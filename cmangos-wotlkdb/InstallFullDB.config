#!/bin/bash
# Container-friendly InstallFullDB.config
# These values override the script defaults so the auto installer runs
# non-interactively inside the DB container.

# MySQL connection
MYSQL_HOST="localhost"
MYSQL_PORT="3306"
MYSQL_USERNAME="mangos"
MYSQL_PASSWORD="mangos"
MYSQL_USERIP="localhost"
MYSQL_COLSTAT=""

# Database names (match what db_create_mysql.sql creates)
WORLD_DB_NAME="wotlkmangos"
REALM_DB_NAME="wotlkrealmd"
CHAR_DB_NAME="wotlkcharacters"
LOGS_DB_NAME="wotlklogs"

# Paths to binaries in the image
MYSQL_PATH="/usr/bin/mariadb"
MYSQL_DUMP_PATH="/usr/bin/mysqldump"

# CORE path (where you cloned mangos-wotlk during image build)
CORE_PATH="/mangos-wotlk"

# Other options
LOCALES="YES"
DEV_UPDATES="NO"
AHBOT="NO"
PLAYERBOTS_DB="NO"
# Disable the interactive countdown inside InstallFullDB when running in container
FORCE_WAIT="NO"

export MYSQL_HOST MYSQL_PORT MYSQL_USERNAME MYSQL_PASSWORD MYSQL_USERIP MYSQL_COLSTAT
export WORLD_DB_NAME REALM_DB_NAME CHAR_DB_NAME LOGS_DB_NAME
export MYSQL_PATH MYSQL_DUMP_PATH CORE_PATH
export LOCALES DEV_UPDATES AHBOT PLAYERBOTS_DB FORCE_WAIT
####################################################################################################
# This is the config file for the '$SCRIPT_FILE' script
#
# You need to insert
#   DB_HOST:      Host on which the database resides
#   DB_PORT:      Port on which the database is running
#   DATABASE:     Your database
#   USERNAME:     Your username
#   PASSWORD:     Your password
#   CORE_PATH:    Your path to core's directory (OPTIONAL: Use if you want to apply remaining core updates automatically)
#   MYSQL:        Your mysql command (usually mysql)
#
####################################################################################################
## Define the host on which the mangos database resides (typically localhost)
DB_HOST="localhost"
## Define the port on which the mangos database is running (typically 3306)
DB_PORT="3306"
## Define the database in which you want to add clean Classic-DB
DATABASE="wotlkmangos"
## Define your username
USERNAME="root"
## Define your password (It is suggested to restrict read access to this file!)
PASSWORD="mangos"
## Define the path to your core's folder (This is optional)
##   If set the core updates located under sql/updates from this mangos-directory will be added automatically
CORE_PATH="/mangos-wotlk"
## Define your mysql programm if this differs
MYSQL=/usr/bin/mariadb
## Define if you want to wait a bit before applying the full database
FORCE_WAIT="YES"
## Define if the 'dev' directory for processing development SQL files needs to be used
##   Set the variable to "YES" to use the dev directory
DEV_UPDATES="NO"
# Enjoy using the tool
